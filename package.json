{
	"name": "wav-preview",
	"displayName": "wav-preview",
	"description": "preview and play wav file in VS Code",
	"version": "1.13.1",
	"engines": {
		"vscode": "^1.59.1"
	},
	"publisher": "sukumo28",
	"categories": [
		"Other"
	],
	"keywords": [
		"wav",
		"audio",
		"sound",
		"music",
		"viewer",
		"preview",
		"play",
		"listen",
		"waveform",
		"spectrogram"
	],
	"icon": "wav-preview.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/sukumo28/wav-preview.git"
	},
	"bugs": {
		"url": "https://github.com/sukumo28/wav-preview.git"
	},
	"activationEvents": [
		"onCustomEditor:wavPreview.audioPreview"
	],
	"main": "./dist/extension.js",
	"browser": "./dist/web/extension.js",
	"contributes": {
		"customEditors": [
			{
				"viewType": "wavPreview.audioPreview",
				"displayName": "Audio Preview",
				"selector": [
					{
						"filenamePattern": "*.wav"
					}
				],
				"priority": "default"
			}
		],
		"configuration": {
			"title": "WavPreview",
			"properties": {
				"WavPreview.autoPlay": {
					"type": "boolean",
					"default": false,
					"description": "automatically play audio file when you open it"
				},
				"WavPreview.autoAnalyze": {
					"type": "boolean",
					"default": false,
					"description": "automatically analyze audio file when you open it"
				},
				"WavPreview.analyzeDefault": {
					"type": "object",
					"default": {},
					"description": "default values of analyze settings"
				}
			}
		}
	},
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": "limited",
			"description": "This ext does not play audio files in untrusted workspaces."
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production --devtool hidden-source-map",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"test": "tsc -p ./ && node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@types/ooura": "^2.1.0",
		"@types/vscode": "^1.59.1",
		"@typescript-eslint/eslint-plugin": "^5.3.1",
		"@typescript-eslint/parser": "^5.3.1",
		"@vscode/test-electron": "^2.1.1",
		"copy-webpack-plugin": "^10.2.1",
		"eslint": "^8.2.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.0",
		"puppeteer": "^13.1.3",
		"ts-loader": "^9.2.6",
		"typescript": "^4.4.4",
		"vscode-test": "^1.6.1",
		"webpack": "^5.64.0",
		"webpack-cli": "^4.9.1"
	},
	"dependencies": {
		"assert": "^2.0.0",
		"ooura": "^2.1.6",
		"process": "^0.11.10",
		"wavefile": "^11.0.0"
	}
}
